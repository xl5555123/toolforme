    <!-- class_detail_style -->
    <style name="class_detail_blue_title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/good_blue</item>
    </style>

    <style name="class_detail_black_title">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="class_detail_gray_content">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">加载中</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- library -->
    <style name="library_header">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_below">@id/header</item>
    </style>

    <!-- actionbar -->
    <style name="Theme.MyActionBarTheme" parent="android:style/Theme.Holo.Light">
        <!-- actionbar 样式 -->
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <!-- actionbar tab部分样式 -->
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
    </style>

    <style name="MyActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <!-- actionbar 背景颜色 -->
        <item name="android:background">@color/navigation_bar_back_color</item>
        <!-- actionbar 标题文字样式 -->
        <item name="android:titleTextStyle">@style/MyActionBarTitleStyle</item>
        <!-- actionbar 高度 -->
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="MyActionBarTitleStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!-- actionbar 标题文字大小 -->
        <item name="android:textSize">22sp</item>
        <!-- actionbar 文字颜色 -->
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- style for the tabs -->
    <style name="MyActionBarTabStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabView">
        <!-- actionbar tab背景 -->
        <item name="android:background">@drawable/actionbar_tab_drawable</item>
        <!-- actionbar 颜色 -->
        <item name="android:layout_height">44dp</item>
    </style>

    <!-- style for library -->
    <style name="Library">

    </style>

    <style name="Library.LendList">

    </style>

    <style name="Library.LendList.header">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Library.LendList.item" parent="Library.LendList.header">
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">#595959</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!-- setting style -->
    <style name="Setting">

    </style>

    <style name="Setting.Title">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Setting.Chevron">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/chevron</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="Setting.Layout">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="arrearagementHeader">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="arrearagementItem" parent="arrearagementHeader">
        <item name="android:gravity">right</item>
        <item name="android:textColor">#8b7b75</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>