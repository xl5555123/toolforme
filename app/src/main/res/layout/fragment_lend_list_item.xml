<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#b9b9b9">

    <TextView
        android:id="@+id/book_name_header"
        style="@style/Library.LendList.header"
        android:layout_alignParentTop="true"
        android:text="书名" />

    <TextView
        android:id="@+id/book_location_header"
        style="@style/Library.LendList.header"
        android:layout_below="@id/book_name_header"
        android:text="馆藏位置" />

    <TextView
        android:id="@+id/book_date_header"
        style="@style/Library.LendList.header"
        android:layout_below="@id/book_location_header"
        android:text="归还日期" />

    <TextView
        android:id="@+id/book_expired_header"
        style="@style/Library.LendList.header"
        android:layout_below="@id/book_date_header"
        android:text="是否到期" />

    <TextView
        android:id="@+id/book_name"
        style="@style/Library.LendList.item"
        android:layout_alignParentTop="true"
        android:text="初级日语上册" />

    <TextView
        android:id="@+id/book_location"
        style="@style/Library.LendList.item"
        android:layout_below="@id/book_name"
        android:text="中心馆藏" />

    <TextView
        android:id="@+id/book_date"
        style="@style/Library.LendList.item"
        android:layout_below="@id/book_location"
        android:text="2015-4-10" />

    <TextView
        android:id="@+id/book_expired"
        style="@style/Library.LendList.item"
        android:layout_below="@id/book_date"
        android:layout_marginBottom="10dp"
        android:text="否" />

</RelativeLayout>