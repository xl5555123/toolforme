<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">


        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wallet_home"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_marginLeft="6dp"
            android:text="我的钱包"
            android:textSize="18sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/divider1"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="1dp"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:id="@+id/card1"
            android:textSize="19sp"
            android:textColor="#DD3d3d"
            android:text="校 园 卡" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_below="@id/card1"
                android:id="@+id/campus_card_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DD3d3d"
                android:textSize="19sp"
                android:layout_gravity="bottom"
                android:text="99.0" />

            <TextView
                android:layout_below="@id/card1"
                android:layout_toRightOf="@id/campus_card_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#DD3d3d"
                android:textSize="19sp"
                android:text="元" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/divider2"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="1dp"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:paddingTop="12dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:textColor="#515BE3"
            android:id="@+id/network"
            android:textSize="19sp"
            android:text="校 园 网" />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
               android:layout_gravity="bottom"
                android:id="@+id/net_balance"
                android:text="0.00"
                android:layout_below="@id/network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515BE3"
                android:textSize="19sp"
                style="@style/arrearagementItem" />

            <TextView
                android:layout_gravity="bottom"
                android:layout_below="@id/network"
                android:layout_toRightOf="@id/net_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515BE3"
                android:textSize="19sp"
                android:text="元" />

        </LinearLayout>



    </LinearLayout>
