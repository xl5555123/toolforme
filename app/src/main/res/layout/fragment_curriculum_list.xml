<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/curriculum_container"
    tools:context="com.pku.ipku.ui.pkuInfo.CurriculumListFragment">
    <ListView
        android:id="@+id/curriculum_lv"
        android:layout_width="match_parent"
        android:divider="#00000000"
        android:dividerHeight="4dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/no_class_rl"
        android:layout_centerInParent="true">
        <TextView android:text="今天没课，感觉自己萌萌哒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_class_text_1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:layout_below="@id/no_class_text_1"
            android:text="O(∩_∩)O"
           />
    </RelativeLayout>


</RelativeLayout>
