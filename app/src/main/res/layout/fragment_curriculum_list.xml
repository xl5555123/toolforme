<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1ffff"
    tools:context="com.pku.ipku.ui.pkuInfo.CurriculumListFragment">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_rl"
        android:padding="10dp"
        android:background="@drawable/timeline_card_background">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/today_curriculum_tv"
            android:text="今日课程"
            android:focusable="true"
            android:textColor="@drawable/week_curriculum_selector"
            android:layout_centerVertical="true"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:id="@+id/week_curriculum_tv"
            android:text="全周课表"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:textColor="@drawable/week_curriculum_selector"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/curriculum_lv"
        android:layout_width="match_parent"
        android:divider="#00000000"
        android:layout_below="@id/header_rl"
        android:dividerHeight="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"/>
    <ImageView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/heh_imv"
        android:visibility="gone"
        android:src="@drawable/hehe"
        android:layout_centerInParent="true"/>


</RelativeLayout>
