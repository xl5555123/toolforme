<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="com.pku.portal.ui.account.LoginActivity">
    
    <TextView
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/login_border_no_color"
        android:gravity="center"
        android:id="@+id/header"
        android:text="掌上燕园测试版 欢迎使用"
        android:layout_width="240dp"
        android:layout_height="30dp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_border_no_border"
        android:gravity="center"
        android:singleLine="true"
        android:hint="账 号"
        android:textColor="#000000"
        android:textColorHint="#747474"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_border_no_border"
        android:gravity="center"
        android:hint="密  码"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#747474"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/check"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/remember_password"
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/remember_password"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/check"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_border_red"
        android:text="登   录"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>
