<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.pku.ipku.ui.studyGuide.queryClass.QueryClassFragment">

    <View
        android:layout_marginTop="100dp"
        android:background="@color/weak_grey_white"
        android:layout_height="1dp"
        android:layout_width="fill_parent"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/year_selector"
        android:layout_width="fill_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学年"/>

        <TextView
            android:id="@+id/year"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:maxLength="15"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignBottom="@+id/press_icon1"
            android:layout_toLeftOf="@+id/press_icon1"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/press_icon1"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/chevron"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <View
        android:background="@color/weak_grey_white"
        android:layout_height="1dp"
        android:layout_width="fill_parent"/>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/team_selector"
        android:layout_width="fill_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学期"
            android:id="@+id/textView" />

        <TextView
            android:id="@+id/team"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:maxLength="15"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignBottom="@+id/press_icon2"
            android:layout_toLeftOf="@+id/press_icon2"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <ImageView
            android:layout_marginRight="20dp"
            android:id="@+id/press_icon2"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/chevron"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <View
        android:background="@color/weak_grey_white"
        android:layout_height="1dp"
        android:layout_width="fill_parent"/>

    <EditText
        android:id="@+id/lesson_name"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="课程名"/>


    <Button
        android:id="@+id/search"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:text="查找"
        android:textColor="@color/white"
        android:background="@color/good_blue"/>

</LinearLayout>
