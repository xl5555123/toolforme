<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/footer"
        layout="@layout/default_footer" />

    <RelativeLayout
        android:id="@+id/select_year"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/footer"
        android:background="@color/white">

    </RelativeLayout>

    <TextView
        android:id="@+id/header_of_select_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"

        android:layout_marginLeft="20dp"
        android:text="学年"
        android:textColor="#707070"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/select_text"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/header_of_select_year"
        android:gravity="center_horizontal"
        android:text="全部"
        android:textColor="#707070"
        android:textSize="16sp" />

    <FrameLayout
        android:id="@+id/text_align"
        android:layout_width="132dp"
        android:layout_height="2dip"
        android:layout_below="@id/select_text"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/header_of_select_year"
        android:background="#707070"></FrameLayout>

    <ImageView
        android:id="@+id/pull"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignBottom="@id/text_align"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/select_text"
        android:src="@drawable/pull_no_active" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="#7cc6b3"
        android:src="@drawable/search" />

    <FrameLayout
        android:id="@+id/year_frame"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_year"
        android:layout_centerHorizontal="true"></FrameLayout>
