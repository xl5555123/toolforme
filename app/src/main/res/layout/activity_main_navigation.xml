<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pku.ipku.ui.navigation.MainNavigationActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#514841"
        android:focusable="false"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_selector"
            android:focusable="true"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/student_button"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_selector"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:src="@drawable/person" />

        <ImageButton
            android:id="@+id/school_button"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_selector"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:src="@drawable/school" />

        <ImageButton
            android:id="@+id/setting_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_selector"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:src="@drawable/setting" />

    </LinearLayout>
</RelativeLayout>
