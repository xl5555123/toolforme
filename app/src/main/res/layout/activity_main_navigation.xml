    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_alignParentTop="true"
        android:layout_above="@id/footer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</RelativeLayout>
